#include<stdio.h>
#include<stdlib.h>
int n;
struct node{
	int key;
	struct node *next;
};
struct node *HashT[10]={NULL};
void insert()
{
    struct node *nn,*p;
	int j,i,num;
	printf("\nEnter No .of elements to be inserted:");
	scanf("%d",&n);
	for(j=0;j<n;j++)
	{
		printf("\nEnter the Number:");
		scanf("%d",&num);
		nn = (struct node *)malloc(sizeof(struct node));
		nn->key = num;
		i=num % n;
		nn->next=NULL;
		if(HashT[i]==NULL)
		{
			HashT[i] = nn;
		}
		else 
		{
		    p = HashT[i];
			while(p->next!=NULL)
			   p = p->next;
			p = nn; 
		}
		
	}
}
void display()
{
	struct node *p;
    int i;
	for(i=0;i<10;i++)
	{
	    printf("\nEntries at index %d:",k);
		if(HashT[i]==NULL)
		{
			printf("0");
		}
		else 
		{  
			p = HashT[i];
			while(p->next!=NULL)
			    printf("%d->",p->key);
			    p = p->next;
			printf("%d",p->key); 
		}
	}
}
int main()
{
	int ch;
	while(1)
	{
		printf("\n\t\tMENU\n1.insert\n2.display\n3.exit\nEnter your option:\n");
		scanf("%d",&ch);
		switch(ch)
		{
			case 1 :insert();break;
			case 2 :display();break;
			case 3 :exit(0);break;
			default:printf("Invalid!");
		}
	}
}

